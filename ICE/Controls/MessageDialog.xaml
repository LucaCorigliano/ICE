<toolkit:ToolkitDialog x:Class="Microsoft.Research.ICE.Controls.MessageDialog"                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                       xmlns:toolkit="clr-namespace:Microsoft.Research.VisionTools.Toolkit.Desktop;assembly=Microsoft.Research.VisionTools.Toolkit.Desktop"                       Icon="/Images/Window.ico" Title="Image Composite Editor" SizeToContent="WidthAndHeight"                       FocusManager.FocusedElement="{Binding ElementName=yesButton}">  <DockPanel MinWidth="330">    <Border DockPanel.Dock="Bottom">      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">        <Button x:Name="yesButton" Content="_Yes" IsDefault="true" Margin="12" Width="75"/>        <Button x:Name="noButton" Content="_No" Margin="12" Width="75"/>        <Button x:Name="cancelButton" Content="Cancel" IsCancel="true" Margin="12" Width="75"/>      </StackPanel>    </Border>    <TextBlock x:Name="messageTextBlock" Text="Do you want to continue?" TextWrapping="Wrap" MaxWidth="400"               HorizontalAlignment="Center" Margin="12,20,12,20"/>  </DockPanel></toolkit:ToolkitDialog>